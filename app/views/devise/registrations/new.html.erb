<div class="container-fluid padding">  
  <div class="justify-content-center">
    <div class="col-md-4">
      <div class="card">
        <h2>Sign up</h2>
        <div class="form-group">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
          
            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, required: "required", autocomplete: "name", placeholder: "Surname Last Name" %>
            </div>
          
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "   ....@mail.com" %>
            </div>
          
            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "password" %>
            </div>
          
            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password" %>
            </div>
            
            <small>Select your profile</small>
            <div class="form-check">
               <%= f.select :role, Role.options_for_role, {prompt: false} %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Sign up", data: {turbo: false}, class: "btn btn-info" %>
            </div>
          <% end %>
          
          <hr>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>  