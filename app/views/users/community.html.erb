
    
<div class="container-fluid padding justify-content-center" id="loggin-top">
  <p id="notice"><%= notice %></p>
  <div class="col-sm-6 col-md-8 col-lg-12 info-tag">
    <span class="community-profile justify-content-center">
      <h1 class="text-center">Hello <%= current_user.name%> !</h1>
      <p> Meet the community and connect with all!</p> <br>
      <% if current_user.role == "teacher" %>
        <%= link_to new_task_path, class: 'order-2 pr-2 bd-highlight' do %>
          <i class="fas fa-plus"> New Tvoz</i> |
        <% end %> 
      <% end%>  
      <%= link_to profile_user_path(current_user.id) do %>   
        <i class="fa-solid fa-user">Profile</i>
      <% end %>
    </span> 
  </div>
</div> 


<div class="container-fluid padding justify-content-center" >  
  <div class="table-responsive">
    <h5><%= paginate @users, window: 2  %></h5>
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th>User Id</th>
          <th>Name</th>
          <th>Avatar</th>
          <th>Email</th>
          <th>Role</th>
          <th>Admin</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr class="user_management">
          <td class= "text-justify"><%= user.id %></td>
          <td class= "text-justify"><%= user.name %></td>
          <% if user.avatar.blank?%>
            <td class= "text-justify"><img class="user_avatar" src="/images/default_avatar.png"></td>
          <% else %>
            <td class= "text-justify"><%= image_tag(user.avatar, class: "user_avatar") %></td>
          <% end %>
          <td class= "text-justify"><%= user.email %></td>
          <td class= "text-justify"><%= user.role %></td>
          <td class= "text-justify"><%= user.admin? ? 'Admin' : 'none' %></td>
          <td class= "text-justify">
            <%= link_to "Show", user_path(user.id),  class: "btn btn-outline-primary show-btn" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <h5><%= paginate @users, window: 2 %></h5>
  </div>
</div>




